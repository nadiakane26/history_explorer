<h3>Search Results</h3>

<% if @landmarks.present? %>
  <h4 class="mt-4">Landmarks</h4>
  <ul class="list-group">
    <% @landmarks.each do |landmark| %>
      <li class="list-group-item">
        <%= link_to landmark.name, landmark_path(landmark) %>
      </li>
    <% end %>
  </ul>
  <p class="mt-3">Total Landmarks: <%= @landmarks.count %></p>
<% end %>

<% if @regions.present? %>
  <h4 class="mt-4">Regions</h4>
  <ul class="list-group">
    <% @regions.each do |region| %>
      <li class="list-group-item">
        <%= link_to region.name, region_path(region) %>
      </li>
    <% end %>
  </ul>
  <p class="mt-3">Total Regions: <%= @regions.count %></p>
<% end %>

<% if @landmarks.blank? && @regions.blank? %>
  <p>No regions or landmarks found.</p>
<% end %>
