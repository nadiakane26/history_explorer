<div class="container">
  <div class="bg-light py-5 mb-4">
    <div class="container-fluid">
      <h1 class="display-4">Landmarks</h1>
      <p class="lead">Click on an landmark to read more or create a new one.</p>
      <hr class="my-4">
      <p class="lead">There are <%= Landmark.count %> landmarks!</p>
      <p>
        <%= link_to "Create a New Landmark", new_landmark_path, class: "btn btn-primary btn-lg" %>
      </p>
    </div>
  </div>
  <!-- Display landmark in a grid layout -->
  <div class="row">
    <% @landmarks.each do |landmark| %>
        <div class="col-md-4 mb-4">
          <!-- Cards with a equal height -->
          <div class="card d-flex flex-column h-100 landmark-card">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title">
                <%= content_tag :span, landmark.name, class: "text-decoration-none" %>
                <!-- Region top right of the card -->
                <% if landmark.region %>
                  <%= content_tag :span, landmark.region.name, class: "float-end text-muted small" %>
                <% end %>
              </h5>
                <p class="card-text">
                  <span>
                    <i class="fa-solid fa-user text-primary"></i> 
                    <%= landmark.user.username %>
                  </span>
                  <br>
                  <span>
                    <i class="fas fa-calendar-alt text-success"></i>
                    <%= landmark.created_at.strftime("%B %d, %Y") %> 
                  </span>
                </p>
              <!-- Read more button positioned at the bottom -->
              <div class="mt-auto">
                <%= link_to "Read More", landmark_path(landmark), class: "btn btn-light" %>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>


<%= link_to "New landmark", new_landmark_path %>
