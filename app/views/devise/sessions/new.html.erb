<h2>Sign In</h2>
<div class="row">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>
      <div class="mb-3 custom-lead custom-lead">
        <%= f.label :email,class: "form-label" %><br>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="mb-3 custom-lead">
        <%= f.label :password, class: "form-label" %><br>
        <%= f.password_field :password, class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3 custom-lead">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "form-label" %>
        </div>
      <% end %>

      <div class="mb-3 custom-lead">
        <%= f.submit "Sign In", class: 'btn btn-primary btn-sm' %>
      </div>
    <% end %>

    <%= render "devise/shared/links", link_class: "custom-lead" %>
  </div>
