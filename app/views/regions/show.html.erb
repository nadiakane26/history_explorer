<h1><%= @region.name %></h1>
<p><%= @region.description %></p>
<!-- Display landmark per region in a grid layout -->
  <div class="row">
    <% @landmarks.each do |landmark| %>
        <div class="col-md-4 mb-4">
          <!-- Cards with a equal height -->
          <div class="card d-flex flex-column h-100 landmark-card">
            <div class="card-body d-flex flex-column">
            <p><span class="btn btn-outline-<%=region_color(landmark.region) %> btn-sm disabled"><%= landmark.region.name  %></span></p>
              <h5 class="card-title">
                <%= content_tag :span, landmark.name, class: "text-decoration-none" %>
                
              </h5>
                <p class="card-text text-muted custom-lead">
                  <span>
                    <%= landmark.user.username %> |<i class="fa-regular fa-calendar ms-2"></i> <%= landmark.created_at.in_time_zone('Central Time (US & Canada)').strftime("%B %d, %Y") %> 
                  </span>
                </p>
              <!-- Read more button-->
              <div class="mt-auto">
                <%= link_to "Read More", landmark_path(landmark), class: "btn btn-light btn-sm" %>
              </div>
            </div>
          </div>
        </div>
    <% end %>

<div class="d-flex gap-2">
<% if current_user&.admin? %>
  <%= link_to 'Edit', edit_region_path(@region),  class: "btn btn-warning btn-sm" %> 
  <%= button_to "Delete", @landmark, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure you want to delete this landmark?" } %>
<% end %>
  <%= link_to "Back to Regions", regions_path, class: "btn btn-secondary btn-sm" %>
  <%= link_to "Create a New Landmark", new_landmark_path, class: "btn btn-dark btn-sm" %>
  

  
</div>
