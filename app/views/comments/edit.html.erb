<h2>Edit Comment</h2>

<%= form_with(model: [@landmark, @comment], local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :body, "Edit your comment" %>
    <%= form.text_area :body, class: "form-control", rows: 4 %>
  </div>
  <%= form.submit "Update Comment", class: "btn btn-primary btn-sm" %>
  <%= link_to "Cancel", landmark_path(@landmark), class: "btn btn-secondary btn-sm" %>
<% end %>